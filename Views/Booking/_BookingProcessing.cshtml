@model GuestService.Models.Booking.BookingContext

@{
    ViewBag.Title = BookingStrings.ResourceManager.Get("BookingProcessing_Title");
}

<script type="text/javascript">
function executeQuery() {  
    $.ajax({
        url: '@Url.Action("bookingstatus", new { id = Model.BookingOperationId })',
        cache: false,
        success: function(data) {	   
        
            if( data && data.isfinished == true) {                
                if(data.reservation) {                   
                    $('#bookingProcess').html('@BookingStrings.ResourceManager.Get("BookingProcessing_OrderTitle_1")' + ' ' + data.reservation + ' ' + '@BookingStrings.ResourceManager.Get("BookingProcessing_OrderTitle_2")');             
                    $('#orderResult span#orderNum').html("<b>"+data.reservation+"</b>");           
                    
                    @if(User.Identity.IsAuthenticated) {
                        <text>$('#orderPayBtn').attr('href','@Url.Action("order","guest")/'+parseInt(data.reservation));</text>
                    } else {
                        <text>$('#orderPayBtn').attr('href','@Url.Action("index","payment")?claim='+parseInt(data.reservation));</text>
                    }
                    $('#orderResult div#okOrderResult').show();             
                    $('#orderResult').modal({ show: true });
                    $('#orderResult').on('hidden.bs.modal', function () {
                        window.location.replace($('#orderPayBtn').attr('href'));       
                    });
                } else {
                    $('#orderResult div#errorOrderList').html("<p>"+data.errors+"</p>");             
                    $('#orderResult div#errorOrderResult').show();             
                    $('#orderResult div#okOrderResult').hide();             
                    $('#orderResult').modal({ show: true });
                }                          
            }
            else {
                setTimeout(executeQuery, 1000);
            }
        },
        error: function(x, t, m) {
            $('#orderResult div#errorOrderResult').show();             
            $('#orderResult div#okOrderResult').hide();             
            $('#orderResult').modal({ show: true });            
        }
    });      
}

$(document).ready(function() {  
    setTimeout(executeQuery, 1000);  
   
});
</script> 

<div class="container">  
    <div class="row bk-main">      
       
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
            @if (GuestService.Settings.IsShowBreadCrumb)
            {
            <ol class="breadcrumb">          
                <li><a href="@Url.Action("index", "welcome")">@BookingStrings.ResourceManager.Get("GuestServiceTitle")</a></li>            
                <li><a href="@Url.Action("index", "excursion")">@BookingStrings.ResourceManager.Get("BookingMenuTitle")</a></li>                  
                <li class="active">@ViewBag.Title</li>
            </ol>
            }
        </div>  
        <div class="col-lg-12">   
            <h2 id="bookingProcess">@BookingStrings.ResourceManager.Get("BookingInProcess")</h2>                    
        </div>
    </div>
    <div class="modal fade" id="orderResult" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>       
                <h4 class="modal-title" id="myModalLabel" style="color:#777777;">@BookingStrings.ResourceManager.Get("BookingResultTitle")</h4>                  
          </div>
          <div id="okOrderResult">            
                <div class="modal-body">             
                    <h3 style="color:#8c8c8c; margin-top:15px;">@BookingStrings.ResourceManager.Get("BookingResultText_1")&nbsp;<span id="orderNum"></span>&nbsp;@BookingStrings.ResourceManager.Get("BookingResultText_2")</h3>
                </div>              
                <div class="modal-footer">                                           
                    <a href="#" class="btn btn-primary" id="orderPayBtn">@BookingStrings.ResourceManager.Get("BookingPayButton")</a>                       
                </div>
          </div>
 
          <div id="errorOrderResult" style="display:none;">
            <div class="modal-body">            
       
                <div class="bs-callout bs-callout-danger">                    
                    <h4 style="margin-bottom:5px;">@BookingStrings.ResourceManager.Get("BookingErrorTitle")</h4>
                    <div id="errorOrderList"></div>
                </div>                                       
                   
            </div>
            <div class="modal-footer">            
                <a href="@Url.Action("index", "booking")" class="btn btn-primary" id="modal-body-move">@BookingStrings.ResourceManager.Get("BookingReturnToOrder")</a>
            </div>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>


            
