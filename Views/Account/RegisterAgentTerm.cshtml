@model GuestService.Models.RegisterAgentTermModel
@{
    ViewBag.Title = AccountStrings.Get("RegisterTitle");
}
<div class="container">
    <div class="row bk-main">
        <div class="col-lg-12 col-md-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        @using (Html.BeginForm("registeragentterm", "account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-lg-12 col-md-12" style="margin-bottom:15px;">
                @AccountStrings.Get("RegisterText")
            </div>
            <div class="col-lg-6">
                @Html.Partial("Form/ValidationSummary")
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-6">

                <!--Contact person, position -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Contact)">Contact person, position </label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Contact") })
                        @Html.ValidationMessageFor(m => m.Contact)
                    </div>
                </div>

                <!--Company name -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.CompanyName)">Property name </label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_CompanyName") })
                        @Html.ValidationMessageFor(m => m.CompanyName)
                    </div>
                </div>

                <!--Short description of the company and services provided-->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.AboutCompany)">Type of the property and short description </label>
                    <div class="controls">
                        @Html.TextAreaFor(m => m.AboutCompany, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_AboutCompany") })
                        @Html.ValidationMessageFor(m => m.AboutCompany)
                    </div>
                </div>

                
                <!--Building area (sq.m.) !!!!!!! -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Square)">Building area (sq.m.)  </label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Square, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Square") })
                        @Html.ValidationMessageFor(m => m.Square)
                    </div>
                </div>

                <!--Average amount of people passing by !!! -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.People)">Average amount of people passing by </label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.People, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_People") })
                        @Html.ValidationMessageFor(m => m.People)
                    </div>
                </div>

                <!--Country, region, city -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.CountryRegion)">Country, region, city</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.CountryRegion, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_CountryRegion") })
                        @Html.ValidationMessageFor(m => m.CountryRegion)
                    </div>
                </div>

                <!--Geo location  -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Location)">Geo location</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Location") })
                        @Html.ValidationMessageFor(m => m.Location)
                    </div>
                </div>

                <!--Phone numbers -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Phone)">@AccountStrings.Get("Register_Phone")</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Phone") })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                </div>
                <!--Fax numbers -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Fax)">@AccountStrings.Get("Register_Fax")</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Fax") })
                        @Html.ValidationMessageFor(m => m.Fax)
                    </div>
                </div>
                <!--Website -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Website)">@AccountStrings.Get("Register_Website")</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Website") })
                        @Html.ValidationMessageFor(m => m.Website)
                    </div>
                </div>
                <!--E-mail address  -->
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.UserName)">@AccountStrings.Get("Register_Email")</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Email") })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.Password)">@AccountStrings.Get("Register_Password")</label>
                    <div class="controls">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_Password") })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="@Html.NameFor(m => m.ConfirmPassword)">@AccountStrings.Get("Register_ConfirmPassword")</label>
                    <div class="controls">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = AccountStrings.Get("Register_Ph_ConfirmPassword") })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="clearfix" style="margin-bottom:10px;"></div>
                <button name="submit" id="submit" value="" type="submit" class="btn btn-large btn-primary">@AccountStrings.Get("Register_RegisterButton")</button>
            </div>
        }
    </div>
</div>


