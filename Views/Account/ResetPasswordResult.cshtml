@{
    ViewBag.Title = AccountStrings.ResourceManager.Get("RestoreTitle");
}
<div class="container">    
	<div class="row bk-main"> 	      
        <div class="col-lg-12 col-md-12" style="height: 80px;">
			<h1>@ViewBag.Title</h1>				
            <hr />
		</div> 
        @if(ViewBag.ResetPasswordResult)
        {
            <div class="col-lg-12 col-md-12">
                 <h3 style="color:#8c8c8c; margin-top:10px; ">@AccountStrings.ResourceManager.Get("RestorePasswordChangedOK")</h3>
            </div>
        }
        else
        {
            <div class="col-lg-12 col-md-12">
                <h3 style="color:#8c8c8c; margin-top:10px; ">@AccountStrings.ResourceManager.Get("RestorePasswordChangedError")</h3>
            </div>
        }
 
        <div class="clearfix" style="margin-bottom:10px;"></div>	
        <div class="col-lg-12 col-md-12">         
            @if (ViewBag.ReturnUrl != null)
            {            
                 <button name="submit" id="submit" value="" type="submit" class="btn btn-large btn-primary" onclick="window.location='@ViewBag.ReturnUrl';">@AccountStrings.ResourceManager.Get("Restore_MaimFormLink")</button>        
            }
            else
            {
                <button name="submit" id="submit" value="" type="submit" class="btn btn-large btn-primary" onclick="window.location='@Url.Action("index", "welcome")';">@AccountStrings.ResourceManager.Get("Restore_MaimFormLink")</button>                    
            }
        </div>
    </div>
</div>