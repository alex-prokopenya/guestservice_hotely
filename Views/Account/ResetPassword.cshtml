@model GuestService.Models.ResetPasswordModel
@{
    ViewBag.Title = AccountStrings.ResourceManager.Get("RestoreTitle");
}  
<div class="container"> 	  
	<div class="row bk-main"> 	      
        <div class="col-lg-12 col-md-12" style="height: 80px;">
            <h1 class="page-header">@ViewBag.Title</h1>	            
		</div>
        <div class="col-lg-12 col-md-12" style="margin-bottom:15px;">
			  <h3 style="color:#8c8c8c; margin-top:10px; ">@AccountStrings.ResourceManager.Get("RestoreText")</h3>
		</div>  
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Token)
                <div class="col-sm-6">       
                    @Html.Partial("Form/ErrorsSummary")
                </div>
                <div class="clearfix"></div> 
                <div class="col-sm-6">       
				    <div class="form-group">
					    <label class="control-label" for="@Html.NameFor(m => m.Password)">@AccountStrings.ResourceManager.Get("Restore_Password")</label>
					    <div class="controls">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = AccountStrings.ResourceManager.Get("Restore_Ph_Password") })
                            @Html.ValidationMessageFor(m => m.Password)						        
					    </div>
				    </div>				
                    <div class="form-group">
					    <label class="control-label" for="@Html.NameFor(m => m.ConfirmPassword)">@AccountStrings.ResourceManager.Get("Restore_ConfirmPassword")</label>
					    <div class="controls">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = AccountStrings.ResourceManager.Get("Restore_Ph_ConfirmPassword") })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)						        
					    </div>
				    </div>
				    <div class="clearfix" style="margin-bottom:10px;"></div>				
				    <button name="submit" id="submit" value="" type="submit" class="btn btn-large btn-primary">@AccountStrings.ResourceManager.Get("Restore_SetPasswordButton")</button>
			       
                </div>                 
          }
      </div>
</div>


